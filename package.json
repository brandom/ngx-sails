{
  "name": "ngx-sails",
  "version": "0.4.0",
  "description": "Sails client for Angular (2+)",
  "watch": {
    "build:dev": {
      "patterns": [
        "src"
      ],
      "extensions": [
        "ts,json"
      ]
    }
  },
  "scripts": {
    "transpile": "ngc -p src/tsconfig.lib.json",
    "package": "rollup -c rollup.config.js",
    "minify": "uglifyjs dist/bundles/ngx-sails.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/ngx-sails.umd.min.js",
    "clean": "rm -rf dist && mkdir dist && cp package.dist.json dist/package.json && cp README.md dist/README.md",
    "build": "npm run build:bundle && npm run minify",
    "build:dist": "npm run version && npm install && npm run build",
    "build:bundle": "npm run clean && npm run transpile && npm run package",
    "build:dev": "npm run build:bundle && npm pack ./dist",
    "build:watch": "npm-watch build:dev",
    "publish-lib": "npm publish ./dist",
    "test": "karma start",
    "test:watch": "karma start",
    "coveralls": "cat ./coverage/lcov/lcov.info | ./node_modules/.bin/coveralls",
    "version": "node ./bin/version"
  },
  "devDependencies": {
    "@angular/common": "^5.0.0-rc.9",
    "@angular/compiler": "^5.0.0-rc.9",
    "@angular/compiler-cli": "^5.0.0-rc.9",
    "@angular/core": "^5.0.0-rc.9",
    "@angular/platform-browser": "^5.0.0-rc.9",
    "@angular/platform-browser-dynamic": "^5.0.0-rc.9",
    "@types/jasmine": "^2.6.2",
    "@types/node": "^8.0.47",
    "@types/socket.io-client": "^1.4.31",
    "bufferutil": "1.3.0",
    "core-js": "^2.5.1",
    "coveralls": "^3.0.0",
    "inquirer": "^3.3.0",
    "jasmine": "^2.8.0",
    "json": "^9.0.6",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-typescript": "^3.0.8",
    "karma-typescript-angular2-transform": "^1.0.2",
    "mock-socket.io": "^1.1.0",
    "npm-watch": "^0.3.0",
    "rollup": "^0.50.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-resolve-aliases": "^0.2.0",
    "rxjs": "^5.5.2",
    "semver": "^5.4.1",
    "socket.io-client": "^2.0.4",
    "sync-files": "^1.0.3",
    "tslint": "^5.8.0",
    "typescript": "^2.4.2",
    "uglify-js": "^3.1.6",
    "utf-8-validate": "2.0.0",
    "zone.js": "^0.8.18"
  }
}
