{
  "name": "ngx-sails",
  "version": "0.1.6",
  "description": "Sails client for Angular (2+)",
  "watch": {
    "build:dev": {
      "patterns": [
        "src"
      ],
      "extensions": [
        "ts,json"
      ]
    }
  },
  "scripts": {
    "transpile": "ngc -p src/tsconfig.lib.json",
    "package": "rollup -c rollup.config.js",
    "minify": "uglifyjs dist/bundles/ngx-sails.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/ngx-sails.umd.min.js",
    "clean": "rm -rf dist && mkdir dist && cp package.dist.json dist/package.json && cp README.md dist/README.md",
    "build": "npm run build:bundle && npm run minify",
    "build:dist": "npm run version && npm run build",
    "build:bundle": "npm run clean && npm run transpile && npm run package",
    "build:dev": "npm run build:bundle && (cd dist && npm link) && sync-files dist ../ngx-sails-dist && (cd ../ngx-sails-dist && npm link)",
    "build:watch": "npm-watch build:dev",
    "test": "karma start",
    "test:watch": "karma start",
    "coveralls": "cat ./coverage/lcov/lcov.info | ./node_modules/.bin/coveralls",
    "version": "node ./bin/version"
  },
  "devDependencies": {
    "@angular/common": "^4.3.3",
    "@angular/compiler": "^4.3.3",
    "@angular/compiler-cli": "^4.3.3",
    "@angular/core": "^4.3.3",
    "@angular/platform-browser": "^4.3.3",
    "@angular/platform-browser-dynamic": "^4.3.3",
    "@types/jasmine": "^2.5.53",
    "@types/node": "^8.0.19",
    "@types/socket.io-client": "^1.4.29",
    "bufferutil": "1.3.0",
    "core-js": "^2.4.1",
    "coveralls": "^2.13.1",
    "inquirer": "^3.2.1",
    "jasmine": "^2.7.0",
    "json": "^9.0.6",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-typescript": "^3.0.5",
    "karma-typescript-angular2-transform": "^1.0.0",
    "mock-socket.io": "^1.1.0",
    "npm-watch": "^0.2.0",
    "rollup": "^0.45.2",
    "rollup-plugin-commonjs": "^8.1.0",
    "rollup-plugin-resolve-aliases": "^0.2.0",
    "rxjs": "^5.4.2",
    "semver": "^5.4.1",
    "socket.io-client": "^2.0.3",
    "sync-files": "^1.0.3",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2",
    "uglify-js": "^3.0.27",
    "utf-8-validate": "2.0.0",
    "zone.js": "^0.8.16"
  }
}
